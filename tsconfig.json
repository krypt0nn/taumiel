{
    "compilerOptions": {
        "module": "es6",
        "target": "es2021",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "outDir": "public/js"
    },
    "include": ["src/ts/*", "src/ts/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}